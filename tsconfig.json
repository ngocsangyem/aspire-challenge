{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"types": ["vite/client", "@types/jest"],
		"skipLibCheck": true,
		"paths": {
			"@/*": ["./src/*"],
			"@/components/*": ["./src/components/*"],
			"@/@types/*": ["./src/@types/*"],
			"@/views/*": ["./src/views/*"],
			"@/assets/*": ["./src/assets/*"],
			"@/stores/*": ["./src/stores/*"],
			"@/helpers/*": ["./src/helpers/*"],
			"@/common/*": ["./src/common/*"],
			"@/styles/*": ["./src/styles/*"],
			"@/__mock__/*": ["./src/__mock__/*"],
		}
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
